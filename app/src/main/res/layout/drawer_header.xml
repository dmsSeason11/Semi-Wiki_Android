<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="72dp"
    android:orientation="horizontal" android:gravity="center_vertical"
    android:padding="16dp" android:background="@android:color/white">

    <TextView
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="로그인이 필요합니다" android:textColor="#9E9E9E" android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvLoginHeader"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="로그인" android:textStyle="bold" android:textColor="#2B2B2B"
        android:paddingHorizontal="8dp" android:paddingVertical="6dp"
        android:clickable="true" android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>
</LinearLayout>
