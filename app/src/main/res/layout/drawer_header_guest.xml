<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 헤더(게스트) -->
    <LinearLayout
        android:id="@+id/linear_layout_drawer_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#2B2B2B"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_guest_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="로그인이 필요합니다"
            android:textColor="#9E9E9E"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_guest_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textStyle="bold"
            android:textColor="#F9F9F9"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:id="@+id/view_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>

    <!-- 작성한 게시글 보기 -->
    <LinearLayout
        android:id="@+id/row_my_posts"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tv_guest_see_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="작성한 게시글 보기"
            android:textColor="#212121"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_arrow_post"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/outline_arrow_forward"/>
    </LinearLayout>

    <View
        android:id="@+id/view_line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>

    <!-- 추천한 게시물 보기 -->
    <LinearLayout
        android:id="@+id/row_liked_posts"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tv_guest_likes_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="추천한 게시물 보기"
            android:textColor="#212121"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_arrow_see"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/outline_arrow_forward"/>
    </LinearLayout>
    <View
        android:id="@+id/view_line_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>
</LinearLayout>
